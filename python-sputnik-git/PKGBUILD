# Maintainer: Mamy Ratsimbazafy <mamy (dot) ratsimbazafy_pkgbuild [at] gadz (dot) org>

pkgname=python-sputnik-git
_pkgname=sputnik
pkgver=0.9.3.r6.g303a5a5
pkgrel=1
pkgdesc='Data package manager library'
arch=('any')
url='https://github.com/explosion/sputnik'
license=('MIT')
depends=('python-semver' 'python-boto3' 'python-pytest')
makedepends=('git' 'python-setuptools')
conflicts=('python-sputnik')
provides=('python-sputnik')
source=('git://github.com/explosion/sputnik.git'
)
md5sums=('SKIP' )

pkgver() {
  cd $_pkgname
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}


build() {
  cd $_pkgname

  python setup.py build
}

package() {
  cd $_pkgname

  python setup.py install --root=${pkgdir} --optimize=1

  install -D -m644 LICENSE ${pkgdir}/usr/share/licenses/python-$_pkgname
}
